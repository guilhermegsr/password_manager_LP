{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ui",
  "version": "0.1.0",
  "identifier": "com.guilherme.ui",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Password Manager",
        "width": 900,
        "height": 650,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
